{
  "settings": {
    "analysis": {
      "analyzer": {
        "autocomplete_analyzer": {
          "type": "custom",
          "tokenizer": "autocomplete_tokenizer",
          "filter": ["lowercase", "asciifolding"]
        },
        "autocomplete_search": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase", "asciifolding"]
        },
        "vietnamese_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "word_delimiter",
            "stop"
          ]
        }
      },
      "tokenizer": {
        "autocomplete_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20,
          "token_chars": ["letter", "digit"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "analyzer": "vietnamese_analyzer",
        "fields": {
          "raw": {
            "type": "keyword"
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "vietnamese_analyzer"
      },
      "slug": {
        "type": "keyword"
      },
      "price": {
        "type": "scaled_float",
        "scaling_factor": 100
      },
      "isActive": {
        "type": "boolean"
      },
      "createdAt": {
        "type": "date"
      },
      "updatedAt": {
        "type": "date"
      },
      "createdBy": {
        "type": "keyword"
      },
      "updatedBy": {
        "type": "keyword"
      },
      "brandId": {
        "type": "keyword"
      },
      "brandName": {
        "type": "text",
        "analyzer": "vietnamese_analyzer",
        "fields": {
          "raw": {
            "type": "keyword"
          }
        }
      },
      "brandSlug": {
        "type": "keyword"
      },
      "nameAutocomplete": {
        "type": "search_as_you_type"
      },
      "brandNameAutocomplete": {
        "type": "search_as_you_type"
      },
      "categories": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword"
      },
      "attributes": {
        "properties": {
          "color": {
            "type": "keyword"
          },
          "size": {
            "type": "keyword"
          },
          "material": {
            "type": "keyword"
          },
          "weight": {
            "type": "float"
          },
          "dimensions": {
            "properties": {
              "length": {
                "type": "float"
              },
              "width": {
                "type": "float"
              },
              "height": {
                "type": "float"
              }
            }
          }
        }
      },
      "viewCount": {
        "type": "integer"
      },
      "orderCount": {
        "type": "integer"
      },
      "rating": {
        "type": "float"
      }
    }
  }
}