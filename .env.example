# TD WebAPI - Environment Variables Template
# Copy this file to .env and update the values as needed

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=jdbc:postgresql://localhost:5432/tdwebapi
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# ============================================
# MONGODB CONFIGURATION (Logging)
# ============================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=tdwebapi_logs
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_DB=admin

# ============================================
# KEYCLOAK CONFIGURATION
# ============================================
KEYCLOAK_SERVER_URL=http://localhost:8180
KEYCLOAK_REALM=td-webapi-realm
KEYCLOAK_CLIENT_ID=td-webapi-client
KEYCLOAK_CLIENT_SECRET=td-webapi-secret-2024

# ============================================
# MINIO CONFIGURATION (File Storage)
# ============================================
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=td-webapi-files

# ============================================
# SPRING CONFIGURATION
# ============================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ============================================
# PRODUCTION OVERRIDES (Optional)
# ============================================
# For production, override these values:
# KEYCLOAK_SERVER_URL=https://keycloak.yourdomain.com
# DATABASE_URL=jdbc:postgresql://prod-db:5432/tdwebapi
# MONGODB_HOST=prod-mongo
# KEYCLOAK_CLIENT_SECRET=your-secure-production-secret

# ============================================
# ADDITIONAL CONFIGURATION (Optional)
# ============================================
# JVM Options
JAVA_OPTS=-Xmx1g -Xms512m

# Logging Level
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_COM_TD=DEBUG

# Cache Configuration
CACHE_TYPE=simple
CACHE_TTL=3600